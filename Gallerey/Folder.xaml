<UserControl x:Class="Gallerey.Folder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gallerey"
             mc:Ignorable="d" 
             d:DesignHeight="NaN" Padding="0" d:DesignWidth="NaN" ContextMenuOpening="UserControl_ContextMenuOpening">
    <Grid>
        <TextBlock x:Name="FolderName" Height="20" Width="150" Foreground="#FFDADADA">DefaultText</TextBlock>
    </Grid>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Выключить папку" x:Name="ButtonChanger" Click="ChangeVisibleFolder"/>
            <MenuItem Header="Удалить папку" Click="DeleteFolder"/>
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>
